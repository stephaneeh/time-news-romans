{{!-- for each post, display this post on the homepage --}}

<section>

  {{#each posts as |post| }}

  <div class="card">
    <div class="card-header">
      <h2><a href="/post/{{post.id}}">{{post.title}}</a></h2>
    </div>
    <div class="card-body">
      <h5>{{post.description}}</h5>
      <p class="float-end">Created by {{post.user.name}} on {{format_date post.date_created}}</p>
    </div>
  </div>
  {{/each}}
</section>