<div class="text-center">
  <h2>{{title}}</h2>
  <p>{{description}}</p>
  <p>Created by {{user.name}} on {{format_date date_created}}</p>
  <p>
    <button class="btn btn-primary">Add a comment!</button>
  </p>
</div>

{{#if comments.length}}
<div class="comments">
  {{#each this}}
  <section class="comment">
    <div class="meta">
      {{user.user.name}} on {{format_date created_at}}
    </div>
    <div class="text">
      {{comment_text}}
    </div>
  </section>
  {{/each}}
</div>
{{/if}}